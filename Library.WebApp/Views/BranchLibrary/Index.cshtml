@model IEnumerable<Library.WebApp.Models.BranchLibrary.BranchLibraryVM>

@*{
    if (User.IsInRole("Librarian") || User.IsInRole("Admin"))​ 
    {
        <p>
            <a asp-action="Create">Create New</a>
        </p>
    }
}*@

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HauseNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HauseNumber)
            </td>
            <td>
                @if (User.IsInRole("Librarian") || User.IsInRole("Admin"))
                {
                    Html.ActionLink("Edit", "Edit", new { id = item.Id });
                    Html.Raw(" | ");
                    Html.ActionLink("Delete", "Delete", new { id = item.Id });
                }
            </td>
        </tr>
}
    </tbody>
</table>
